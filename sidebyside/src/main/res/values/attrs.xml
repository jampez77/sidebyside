<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SideBySideView">

        <attr name="textViewTextStyle" format="string" />
        <attr name="titleTextColor" format="color" />

        <attr name="editTextBackground" format="reference" />
        <attr name="inputTextColor" format="color" />
        <attr name="editTextTextStyle" format="string" />

        <attr name="textAppearance" format="reference" />
        <attr name="passwordValidationExpression" format="string"/>
        <attr name="passwordErrorMessage" format="string"/>

        <attr name="leftText" format="string" localization="suggested" />
        <attr name="leftInput" format="string"/>
        <attr name="leftEditInputType" format="string"/>
        <attr name="leftSpinnerEntries" format="reference"/>
        <attr name="leftEditTextText" format="string"/>
        <attr name="leftEditTextHint" format="string"/>
        <attr name="leftRequired" format="boolean"/>
        <attr name="leftInputEnabled" format="boolean"/>
        <attr name="leftPadding" format="dimension"/>
        <attr name="leftBackground" format="reference" />
        <attr name="leftHideTitle" format="boolean"/>
        <attr name="leftTextViewInputType" format="enum">
            <enum name="none" value="0"/>
            <enum name="uppercase" value="1"/>
            <enum name="lowercase" value="2"/>
            <enum name="cap_words" value="3"/>
            <enum name="cap_sentences" value="4"/>
        </attr>

        <attr name="rightText" format="string" localization="suggested" />
        <attr name="rightInput" format="string"/>
        <attr name="rightEditInputType" format="string"/>
        <attr name="rightSpinnerEntries" format="reference"/>
        <attr name="rightEditTextText" format="string"/>
        <attr name="rightEditTextHint" format="string"/>
        <attr name="hideRightView" format="boolean"/>
        <attr name="rightRequired" format="boolean"/>
        <attr name="rightInputEnabled" format="boolean"/>
        <attr name="rightPadding" format="dimension"/>
        <attr name="rightBackground" format="reference" />
        <attr name="rightHideTitle" format="boolean" />
        <attr name="rightTextViewInputType" format="enum">
            <enum name="none" value="0"/>
            <enum name="uppercase" value="1"/>
            <enum name="lowercase" value="2"/>
            <enum name="cap_words" value="3"/>
            <enum name="cap_sentences" value="4"/>
        </attr>

    </declare-styleable>
</resources>